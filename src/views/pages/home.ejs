                                    <button type="button" class="button button-primary">Cuộn để xem thêm</button>
                                </div>
                            </div>
                            <div class="col-6 d-flex justify-content-center align-items-center">
                                <div class="image d-flex justify-content-center align-items-center" data-aos="fade-left"
                                    data-aos-delay="200" data-aos-duration="10000">
                                    <img src="/images/illustrator/illustratorhome.png" alt="" width="70%">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="slider" id="teachers">
                        <div class="row inner">
                            <div class="col-6 d-flex justify-content-center align-items-center">
