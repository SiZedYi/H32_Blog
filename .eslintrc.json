{
  "version": "0.0.1",
  "name": "H32_Blog",
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "js": true
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "es2021": true,
      "browser": true
    },
  "extends": [
    "airbnb",
    "standard",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "./node_modules/coding-standard/.eslintrc-es6",
    "./node_modules/coding-standard/eslintDefaults.js"
  ],
    "rules": {
      "semi":0,
      "no-plusplus": "off",
      "no-restricted-globals": "off",
      "@javascript-eslint/semi": "",
      "@typescript-eslint/semi": "warn",
      "prettier/prettier": [
        "error",
        // configure Prettier for ESLint
        {
          "printWidth": 100,
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "avoid"
        }
      ]
    }
  }
}
