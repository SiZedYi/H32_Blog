{
  "version": "0.0.1",
  "name": "H32_Blog",
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "semi":0,
    "@javascript-eslint/semi": "",
    "@typescript-eslint/semi": "warn"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "js": true
    }
  },
  "extends": [
    "standard",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "./node_modules/coding-standard/.eslintrc-es6",
    "./node_modules/coding-standard/eslintDefaults.js"
  ],
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "es2021": true,
      "browser": true
    }
  }
}
