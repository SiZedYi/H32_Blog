    <script>
        var timelineSwiper = new Swiper ('.timeline .swiper-container', {
            direction: 'vertical',
            loop: false,
            speed: 1600,
            mousewheel: {
                releaseOnEdges: true,
            },
            slidesPerView: 1,
            keyboard: {
                enabled: true,
                onlyInViewport: true,
            },
            pagination: {
                el: '.swiper-pagination',
                renderBullet: function (index, className) {
                    var year = document.querySelectorAll('.swiper-slide')[index].getAttribute('data-year');
                    // if(year === '....')
                    //     return `<span id="spanYear" class="${className}">${year}</span>
                    //             <input type="text" id="inputYear" hidden>`;
