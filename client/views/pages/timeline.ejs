                        return '<span class="' + className + '">' + year + '</span>';
                },
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                768: {
                    direction: 'vertical',
                }
            },
        });

        window.addEventListener('wheel', function (e) {
	    if (e.deltaY >= 0) {
        // down
            timelineSwiper.slideNext()
        } else {
        // UP
            timelineSwiper.slidePrev()
        }
    })
